    <T n="text">0xE48A7866<!--String: "Haz clic para conocer más detalles sobre vallas y puertas."--></T>
    <T n="title">0x68C66726<!--String: "Vallas y puertas"--></T>
    <L n="ui_responses">
      <U>
        <T n="text">0xA13F0B8C<!--String: ""--></T>
